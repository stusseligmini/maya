# Production Environment Configuration
ENVIRONMENT=production
DEBUG=False

# Database
DATABASE_URL=postgresql://maya:secure_password@postgres:5432/maya_db
DATABASE_ECHO=False

# Redis
REDIS_URL=redis://redis:6379/0

# Security
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-for-production
ENCRYPTION_KEY=your-32-character-encryption-key

# AI Service URLs
FOOOCUS_API_URL=http://ai-service:8080
OPENAI_API_KEY=your-production-openai-key
HUGGINGFACE_API_KEY=your-production-huggingface-key
RUNWAY_API_KEY=your-production-runway-key

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-production-telegram-bot-token
TELEGRAM_CHAT_ID=your-production-telegram-chat-id

# Social Media APIs (Production)
INSTAGRAM_ACCESS_TOKEN=your-production-instagram-token
TIKTOK_ACCESS_TOKEN=your-production-tiktok-token
TWITTER_API_KEY=your-production-twitter-key
TWITTER_API_SECRET=your-production-twitter-secret

# Storage
PROTON_USERNAME=your-production-proton-user
PROTON_PASSWORD=your-production-proton-pass

# Queue
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=WARNING

# Features
ENABLE_AI_ENHANCEMENT=True
ENABLE_CONTENT_MODERATION=True
ENABLE_ANALYTICS=True
AUTO_MODERATION=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_CONTENT_PROCESSING_TIME=600
