# Maya AI Content Optimization - Development Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://maya:maya@localhost:5432/maya
DATABASE_ECHO=true

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model API Keys (set these in production)
# OPENAI_API_KEY=your-openai-api-key
# HUGGINGFACE_API_KEY=your-huggingface-api-key
# RUNWAY_API_KEY=your-runway-api-key

# Social Media API Configuration (set these for platform integration)
# Instagram
# INSTAGRAM_CLIENT_ID=your-instagram-client-id
# INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Twitter/X
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
# TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# TikTok
# TIKTOK_CLIENT_ID=your-tiktok-client-id
# TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Content Processing Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Logging Configuration
LOG_LEVEL=DEBUG

# Feature Flags
ENABLE_AI_ENHANCEMENT=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true

# Monitoring (optional for development)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking