# Maya AI Content Optimization - Environment Configuration

# Application Settings
APP_NAME=Maya AI Content Optimization
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=["*"]

# Database Settings
DATABASE_URL=sqlite:///./maya.db
DATABASE_ECHO=true

# Redis Settings (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Settings
OPENAI_API_KEY=sk-your-openai-api-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here

# Social Media API Settings
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Content Processing Settings
MAX_UPLOAD_SIZE=104857600
ALLOWED_MEDIA_TYPES=["image/jpeg", "image/png", "video/mp4", "video/mov"]

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_AI_ENHANCEMENT=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true