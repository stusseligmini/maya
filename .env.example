# Environment configuration for Maya AI Content System

# Application Settings
DEBUG=false
ENVIRONMENT=development
APP_NAME="Maya AI Content System"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://maya:maya@localhost:5432/maya
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_HOSTS=["*"]

# AI Model Configuration
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_TOKEN=your-huggingface-token-here
MODEL_CACHE_DIR=./models/cache

# Social Platform APIs
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-optional
PROMETHEUS_PORT=8090
LOG_LEVEL=INFO
JSON_LOGS=true