# Maya AI Environment Variables Example
# Copy to .env and adjust values as needed

# Environment (development, production)
ENVIRONMENT=development

# Database Connection
DATABASE_URL=postgresql://maya:maya@localhost:5432/maya
REDIS_URL=redis://localhost:6379/0

# API Settings
PORT=8000
HOST=0.0.0.0
DEBUG=true
LOG_LEVEL=info

# Security
SECRET_KEY=your_secret_key_here_please_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=86400
ALLOWED_HOSTS=["*"]  # Production should be restrictive

# AI Models
OPENAI_API_KEY=your_openai_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Social Media
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_USER_ID=your_admin_user_id

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/maya-ai
N8N_AUTH_TOKEN=your_n8n_auth_token

# Monitoring
PROMETHEUS_METRICS=true
